<h1>予約フォーム</h1>

<%= form_with(model: @event, local: true) do |form| %>

  <div class="title">
    <%= form.label :name, '名前' %>
    <%= form.text_field :name %>
  </div>

  <div class="time">
    <%= form.label :start_time, '予約希望時間を入力してください' %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= form.label :remarks, '希望のデザインなど、ご指定ください' %>
    <%= form.text_field :remarks %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>
    <%= link_to '予約カレンダーへ', events_path %>
<% end %>